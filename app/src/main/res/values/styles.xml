<resources>

    <style name="None">
    </style>

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@android:color/transparent</item>
        <item name="backgroundStacked">@android:color/transparent</item>
        <item name="backgroundSplit">?attr/colorPrimary</item>
    </style>

    <style name="SettingsDrawer.Header" parent="None">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="SettingsDrawer.Setting" parent="None">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsDrawer.Widget" parent="None">
        <item name="colorAccent">@color/pxBlue</item>
        <item name="android:minHeight">26dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

</resources>
